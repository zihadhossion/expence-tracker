# ==========================================
# Application Configuration
# ==========================================

# Server port
PORT=3000

# Application mode: DEV for development, any other value for production
MODE=DEV

# Frontend application URL (optional)
FRONTEND_URL=http://localhost:5173


# ==========================================
# CORS Configuration
# ==========================================

# Comma-separated list of allowed CORS origins
ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000


# ==========================================
# Database Configuration
# ==========================================

# PostgreSQL database host
POSTGRES_HOST=localhost

# PostgreSQL database port
POSTGRES_PORT=5432

# PostgreSQL database username
POSTGRES_USER=your_db_user

# PostgreSQL database password
POSTGRES_PASSWORD=your_db_password

# PostgreSQL database name
POSTGRES_DATABASE=expense_tracker


# ==========================================
# JWT Authentication Configuration
# ==========================================

# Secret key for signing JWT tokens (use a strong, random string in production)
AUTH_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cookie name for storing access token
AUTH_TOKEN_COOKIE_NAME=access_token

# Access token expiration time in milliseconds (e.g., 900000 = 15 minutes)
AUTH_TOKEN_EXPIRED_TIME=900000

# Access token expiration time when "remember me" is checked (in milliseconds, e.g., 604800000 = 7 days)
AUTH_TOKEN_EXPIRED_TIME_REMEMBER_ME=604800000

# Cookie name for storing refresh token
AUTH_REFRESH_TOKEN_COOKIE_NAME=refresh_token

# Refresh token expiration time in milliseconds (e.g., 604800000 = 7 days)
AUTH_REFRESH_TOKEN_EXPIRED_TIME=604800000

# Refresh token expiration time when "remember me" is checked (in milliseconds, e.g., 2592000000 = 30 days)
AUTH_REFRESH_TOKEN_EXPIRED_TIME_REMEMBER_ME=2592000000
